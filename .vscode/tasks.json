{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Generate go protos",
      "type": "shell",
      "command": "protoc --go_out=. --go-grpc_out=. protobuf/*.proto"
    },
    {
      "label": "Docker build",
      "type": "shell",
      "command": "docker build -t grpc-consumer -f build/docker/Dockerfile .",
      "group": {
        "kind": "build",
        "isDefault": true
      }
    }
  ]
}